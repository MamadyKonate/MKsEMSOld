@model MKsEMS.ViewModels.ResetPass
@inject CurrentUser2 _currentUser
@using MKsEMS.Controllers
@{
    ViewData["Title"] = "Reset your Password";
    string email = "";
    if(_currentUser.GetLoggedInUser() != null)
    {
        email = _currentUser.GetLoggedInUser().Email;
    }

}  

@*  BG DANGE / SUCCESS NOT WORKING*@
<h4>@ViewData["Title"] </h4>

    @{
        if (TempData["NoMatchingPass"] != null)
        {
            if (TempData["NoMatchingPass"].ToString().Contains("Success"))
            {
                <div class="text-bg-success">
                    @TempData["NoMatchingPass"]
                </div>      
            }
            else
            {
                <div class="text-bg-danger">
                  @TempData["NoMatchingPass"]
                </div>        
            }
        }
    }

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />@email                
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label"></label>
                <input asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReEnterNewPassword" class="control-label"></label>
                <input asp-for="ReEnterNewPassword" class="form-control" />
                <span asp-validation-for="ReEnterNewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
