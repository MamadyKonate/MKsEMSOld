        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.LeaveTaken)
        </dd>
        <dt class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.SickLeaveTaken)
        </dt>
        <dd class="col-sm-10 mb-3">
